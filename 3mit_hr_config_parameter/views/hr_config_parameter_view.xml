<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_config_form" model="ir.ui.view">
            <field name="model">hr.rule.parameter</field>
            <field name="arch" type="xml">
                <form string="Config Parámetros" version="13.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_config_tree" model="ir.ui.view">
            <field name="model">hr.rule.parameter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

